# $Id: Makefile.in,v 1.1 1998-09-03 01:12:41 ghudson Exp $

SHELL=/bin/sh
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
VPATH=@srcdir@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
mandir=@mandir@
bindir=@bindir@
lbindir=@lbindir@

CC=@CC@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
ALL_CFLAGS=${CPPFLAGS} ${CFLAGS}

all: hesinfo

hesinfo: hesinfo.o
	${CC} ${LDFLAGS} -o $@ hesinfo.o -lhesiod ${LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${lbindir}
	${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man1
	${INSTALL} -m 555 hesinfo ${DESTDIR}${lbindir}
	${INSTALL} -m 444 ${srcdir}/hesinfo.1 ${DESTDIR}${mandir}/man1

clean:
	rm -f ${OBJS} hesinfo.o hesinfo

distclean: clean
	rm -f config.cache config.log config.status Makefile
